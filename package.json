{
    "name": "planning-poker",
    "version": "0.0.1",
    "description": "Planning Poker Desktop application built with Electron, React & Typescript",
    "main": "main.js",
    "scripts": {
        "dev": "parcel ./src/index.html -d build/",
        "start-dev": "ELECTRON_START_URL=http://localhost:1234 electron .",
        "start": "electron .",
        "build": "parcel build ./src/index.html -d build/ --public-url ./",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "postinstall": "electron-builder install-app-deps",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "build": {
        "appId": "parcel.reactjs.electron",
        "mac": {
            "category": "your.app.category.type"
        },
        "files": [
            "main.js",
            "build/*"
        ]
    },
    "jest": {
        "setupFiles": [
            "<rootDir>/config/test-shim.js",
            "<rootDir>/config/test-setup.js"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "<rootDir>/config/test-preprocessor.js"
        },
        "testMatch": [
            "**/__tests__/*.(test|spec).(ts|tsx|js)"
        ]
    },
    "keywords": [
        "typescript",
        "react",
        "parcel",
        "electron",
        "planning-poker",
        "desktop-app"
    ],
    "author": "Lex Martinez<lex0316@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "react": "^16.3.0",
        "react-dom": "^16.3.0"
    },
    "devDependencies": {
        "babel-preset-env": "^1.6.1",
        "babel-preset-react": "^6.24.1",
        "electron": "~1.7.8",
        "electron-builder": "^19.50.0",
        "electron-reload": "^1.2.2",
        "@types/enzyme": "^3.1.9",
        "@types/jest": "^22.2.2",
        "@types/react": "^16.1.0",
        "@types/react-dom": "^16.0.4",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "jest": "^22.4.3",
        "parcel-bundler": "^1.7.0",
        "parcel-plugin-typescript": "^0.7.0",
        "prettier": "^1.11.1",
        "react-test-renderer": "^16.3.0",
        "ts-jest": "^22.4.2",
        "tslint": "^5.9.1",
        "tslint-config-airbnb": "^5.8.0",
        "tslint-config-prettier": "^1.10.0",
        "tslint-react": "^3.5.1",
        "typescript": "^2.8.1"
    }
}
